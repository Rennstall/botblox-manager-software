    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "request": "launch",
            "program": "botblox_config/__main__.py",
            "console": "integratedTerminal",
            "args": [
                "-S",
                "switchblox_nano",
                "-D",
                "COM4",
                "vlan",
                "--reset",
            ]
        }
    ]
}